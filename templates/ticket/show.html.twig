{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ ticket.amount }}</td>
            </tr>
            <tr>
                <th>Payed</th>
                <td>{{ ticket.payed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path('ticket_index') }}">back to list</a>

    <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
